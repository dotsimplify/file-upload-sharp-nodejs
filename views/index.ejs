<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mutiple Uploads Images App</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/0.0.0-insiders.4a070ac/tailwind.min.css"
      integrity="sha512-vJu7D5BpjnNXVpLBrl9LKLvmXBNjiLwge8EOZ/YS9XwiChpfKLAlydwIZvoJaDE3LI/kr3goH0MzDzNbBgyoOQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <style>
      #thumbContainer {
        height: 400px;
      }
    </style>
    <form action="/" method="POST" enctype="multipart/form-data">
      <div class="py-20 bg-gray-300 px-2">
        <div
          class="
            max-w-md
            mx-auto
            bg-white
            rounded-lg
            overflow-hidden
            md:max-w-lg
          "
        >
          <div class="md:flex">
            <div class="w-full">
              <div class="p-4 border-b-2">
                <span class="text-lg font-bold text-gray-600"
                  >Add documents</span
                >
              </div>
              <div class="p-3">
                <div class="mb-2">
                  <span>Attachment</span>
                  <div
                    class="
                      relative
                      h-40
                      rounded-lg
                      border-dashed border-2 border-gray-200
                      bg-white
                      flex
                      justify-center
                      items-center
                      hover:cursor-pointer
                    "
                    id="ab"
                    name="ab"
                  >
                    <div class="absolute">
                      <div class="flex flex-col items-center">
                        <i class="fa fa-cloud-upload fa-3x text-gray-200"></i>
                        <span class="block text-gray-400 font-normal"
                          >Attach you file here</span
                        >
                        <span class="block text-gray-400 font-normal">or</span>
                        <span class="block text-blue-400 font-normal"
                          >Browse file</span
                        >
                      </div>
                    </div>
                    <input
                      type="file"
                      name="file"
                      class="h-full w-full opacity-0"
                      id="file"
                    />
                  </div>
                  <div class="flex justify-between items-center text-gray-400">
                    <span>Accepted file type:.jpg /.png /jpeg only</span>
                    <span class="flex items-center"
                      ><i class="fa fa-lock mr-1"></i> secure</span
                    >
                  </div>
                </div>

                <div class="mt-3 text-center pb-3">
                  <button
                    class="
                      w-full
                      h-12
                      text-lg
                      w-32
                      bg-blue-600
                      rounded
                      text-white
                      hover:bg-blue-700
                    "
                    type="submit"
                  >
                    Send
                  </button>
                </div>
                <div class="flex mt-4 mb-3 mxw" id="thumbContainer">
                  <div class="m-auto">
                    <span class="m-auto" id="previewText">Image Preview</span>

                    <img
                      src=""
                      id="thumbImage"
                      class="hidden"
                      alt="image thumbnail"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </body>
  <script>
    const previewText = document.getElementById("previewText");
    const thumbImage = document.getElementById("thumbImage");
    const thumbContainer = document.getElementById("thumbContainer");
    const inputImage = document.getElementById("file");

    inputImage.addEventListener("change", function (e) {
      const file = URL.createObjectURL(e.target.files[0]);
      console.log(file);

      if (file) {
        previewText.classList.add("hidden");
        thumbImage.classList.remove("hidden");
        thumbImage.setAttribute("src", file);
      }
    });
  </script>
</html>
